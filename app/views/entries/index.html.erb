<% hidden ||= [] %>

<% if entries.any? %>
	<%= content_tag :div, '', class: "entry-container #{entries.first.type.downcase.to_s.pluralize}-container" do %>
		<% entries.each do |entry| %>
			<%= render template: 'entries/show', locals: { entry: entry } %>
		<% end %>
		
		<% if hidden.any? %>
			<%= link_to 'More!', 'javascript:;', class: 'show-hidden-entries' %>
			<% hidden.each do |entry| %>
				<%= render template: 'entries/show', locals: { entry: entry, hidden: true } %>
			<% end %>
		<% end %>
	<% end %>
<% end %>
