
<%= content_tag :div, '', class: 'entry-types' do %>
	<% @types.each { |type| concat entry_title_link type } %>
<% end %>

<%= content_tag :div, '', class: 'entry-container' do %>
	<% @entries.each do |entry| %>
		<%= content_tag :div, class: 'entry' do %>
			<%= render template: 'entries/show', locals: { entry: entry, show_links: true } %>
		<% end %>
	<% end %>
<% end %>
